<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"><strong>ESTUDIANTE</strong></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Estudiante" placeholder="Estudiant"
                value="{{employee.Estudiante}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label"><strong>FECHA</strong></label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="inputPassword3" name="Fecha" placeholder="Fecha"
                value="{{employee.Fecha}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label"><strong>NO.PROGRAMA</strong></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword3" name="No_programa" placeholder="No_programa"
                value="{{employee.No_programa}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label"><strong>LENGUAJE</strong></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword3" name="Lenguaje" placeholder="Lenguaje"
                value="{{employee.Lenguaje}}">
        </div>
    </div>
    <div class="form-row">
        <div class="col-md text-center">
            <label for="validationDefault02">Número</label>
            <input type="text" class="form-control" id="validationDefault02" name="Numero" placeholder="Numero"
                value="{{employee.Numero}}">
        </div>
        <div class="col-md text-center">
            <label for="validationDefault02">Tipo</label>
            <input type="text" class="form-control" id="validationDefault02" name="Tipo" placeholder="Tipo"
                value="{{employee.Tipo}}">
        </div>
        <div class="col-md text-center">
            <label for="validationDefault02">Errores ingresados</label>
            <input type="text" class="form-control" id="validationDefault02" name="Errores_ingresados"
                placeholder="Errores_ingresados" value="{{employee.Errores_ingresados}}">
        </div>
        <div class="col-md text-center">
            <label for="validationDefault02">Errores eliminados</label>
            <input type="text" class="form-control" id="validationDefault02" name="Errores_eliminados"
                placeholder="Errores_eliminados" value="{{employee.Errores_eliminados}}">
        </div>
        <div class="col-md text-center">
            <label for="validationDefault02">Tiempo reparación</label>
            <input type="text" class="form-control" id="validationDefault02" name="Tiempo_reparacion"
                placeholder="Tiempo_reparacion" value="{{employee.Tiempo_reparacion}}">
        </div>
        <div class="col-md text-center">
            <label for="validationDefault02">Errores en reparación</label>
            <input type="text" class="form-control" id="validationDefault02" name="Errores_reparacion"
                placeholder="Errores_reparacion" value="{{employee.Errores_reparacion}}">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Descripción</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Descripcion"
            placeholder="Descripcion" value="{{employee.Descripcion}}"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
